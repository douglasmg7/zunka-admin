{{template "base" .}}

{{define "embedded-css"}} 
<style type="text/css">
    h3 {
        margin-bottom: .1em;
    }
    div.legend {
        margin-bottom: 2em;
    }
    div.legend span {
        margin: 1px;
        display: inline-block;
    }
    p.product {
		cursor: pointer;
        margin: .8em 0;
	}
    p.hasMongodbId, div.legend span.hasMongodbId {
        padding: .3em;
        background-color: var(--green-lighter);
    }
    p.product.new, div.legend span.new {
        padding: 0 .3em;
        border: 5px solid var(--green-lighter);
    }
    p.product.changed, div.legend span.changed {
        padding: 0 .3em;
        border: 5px solid var(--yellow);
    }
    p.product.unavailable, div.legend span.unavailable {
        padding: 0 .3em;
        border: 5px solid var(--orange);
    }
    p.product.removed, div.legend span.removed {
        padding: 0 .3em;
        border: 5px solid var(--red);
    }
	table {
		margin-top: .5em;
		Width: 100%;
	}
	td {
		padding-right: 1em;
	}
	tr {
		cursor: pointer;
	}
</style>
{{end}}

